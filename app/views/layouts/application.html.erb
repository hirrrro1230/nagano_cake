<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span class='navbar-brand'>NaganoCake</span>
          </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    <ul class="navbar-nav ml-auto">
    <% if customer_signed_in? %>
      <li>ようこそ、<%= current_customer.last_name %>さん！</li>
      <li>
      <%= link_to customers_my_page_path, class:'navbar-brand' do %>
       マイページ
      <% end %>
      </li>
      <li>
      <%= link_to items_path, class:'navbar-brand' do %>
       商品一覧
      <% end %>
      </li>
      <li>
      <%= link_to cart_items_path, class:'navbar-brand' do %>
       カート
      <% end %>
      </li>
      <li>
      <%= link_to destroy_customer_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class:'navbar-brand' do %>
       ログアウト
      <% end %>
      </li>
    <% elsif admin_signed_in? %>
      <li>
      <%= link_to admin_items_path, class:'navbar-brand' do %>
        商品一覧
      <% end %>
      </li>
       <li>
       <%= link_to admin_customers_path, class:'navbar-brand' do %>
         会員一覧
       <% end %>
      </li>
      <li>
       <%= link_to admin_path, class:'navbar-brand' do %>   
         注文履歴一覧
       <% end %>
      </li>
      <li>
       <%= link_to admin_genres_path, class:'navbar-brand' do %> 
         ジャンル一覧
       <% end %>
      </li>
      <li>
        <%= link_to destroy_admin_session_path, method: :delete, "data-confirm" => "本当にログアウトしますか？", class:'navbar-brand' do %>
          ログアウト
        <% end %>
      </li>
    <% else %>
      <li>
      <%= link_to about_path, class:'navbar-brand' do %>
       About
       <% end %>
      </li>
      <li>
      <%= link_to items_path, class:'navbar-brand' do %>
        商品一覧
       <% end %>
      </li>
      <li>
        <%= link_to new_customer_registration_path, class:'navbar-brand' do %>
          新規登録
        <% end %>
      </li>
      <li>
        <%= link_to new_customer_session_path, class:'navbar-brand' do %>
         ログイン
        <% end %>
      </li>
    <% end %>
    </ul>
    </div>
    </nav>
  </header>
  
    <%= yield %>
  </body>
</html>
