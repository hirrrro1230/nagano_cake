<div class="container">
     <div class="row">
        <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto rounded px-0 my-5">
            <h3>注文履歴一覧</h3>
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>注文日</th>
                        <th>配送先</th>
                        <th>注文商品</th>
                        <th>支払金額</th>
                        <th>ステータス</th>
                        <th>注文詳細</th>
                    </tr>
                </thead>
                <tbody>
                <% @orders.each do |order| %>
                    <tr>
                        <td><%= order.created_at %></td>
                        <td><%= order.address %></td>
                        <td><% order.order_details.each do |order_detail| %>
                                <%= order_detail.item.name %>
                            <% end %>
                        </td>
                        <td><%= order.total_payment %>円</td>
                        <td><%= order.status %></td>
                        <td><%= link_to order_path(order.id), class:"btn btn-primary" do %>
                        表示する
                        <% end %>
                        </td>
                    </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>