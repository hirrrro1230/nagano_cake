<div class="container">
     <div class="row">
        <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto rounded px-0 my-5">
            <table class="table table-hover table-bordered">
                <thead>
                    <th>注文日</th>
                    <th>配送先</th>
                    <th>注文商品</th>
                    <th>支払金額</th>
                    <th>ステータス</th>
                    <th>注文詳細</th>
                </thead>
                <tbody>
                <% @orders.each do |order| %>
                    <td><%= current_customer.order.created_at %></td>
                    <td><%= current_customer.order.address %></td>
                    <td><%= current_customer.order.item %></td>
                    <td><%= current_customer.order.total_payment %></td>
                    <td><%= current_customer.order.status %></td>
                    <td><%= link_to order_path(order.id), class:"btn btn-danger" do %>
                    表示する
                    <% end %>
                    </td>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>