<h3>注文情報入力</h3>
<%= form_with model: Order.new, url: orders_confirm_path do |f| %>
<p>支払方法</p>
    <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
    
    <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
    <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
<p>お届け先</p>
    <p><%= f.radio_button :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>ご自身の住所</p>
    <p><%= current_customer.postal_code %>　<%= current_customer.address %> </p>
    <p><%= f.radio_button :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>登録済み住所から選択</p>
    <p><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %></p>
    <P><%= f.radio_button :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %>新しいお届け先</P>
    <p>郵便番号（ハイフン無し）<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></p>
    <P>住所　<%= f.text_field :address %></P>
    <P>宛名　<%= f.text_field :name, autofocus: true, autocomplete: "name" %></P>
    
<p>
    <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
</p>
<% end %>
    