<div class="container">
     <div class="row">
        <div class="col-md-10 col-sm-10 mx-2 mx-sm-auto rounded px-0 my-5">
            <h3>注文履歴詳細</h3>
            <h4>注文情報</h4>
            <table class="table table-hover table-bordered">
                <tbody>
                    <tr>
                        <th scope="row">注文日</th>
                        <td><%= @order.created_at %></td>
                    </tr>
                    <tr>
                        <th scope="row">配送先</th>
                        <th><%= @order.postal_code %></br>
                        <%= @order.address%>
                        <%= @order.name %></th>
                    </tr>
                    <tr>
                        <th scope="row">支払方法</th>
                        <td><%= @order.payment_method %></td>
                    </tr>
                    <tr>
                        <th scope="row">ステータス</th>
                        <td><%= @order.status %></td>
                    </tr>
                </tbody>
            </table>
            <h4>請求情報</h4>
            <table class="table table-hover table-bordered">
                <tr>
                    <th scope="row">商品合計</th>
                    <td><%= @order.total_payment %></td>
                </tr>
                <tr>
                    <th scope="row">配送料</th>
                    <td><%= @order.shipping_cost %></td>
                </tr>
                <tr>
                    <th scope="row">ご請求額</th>
                    <td><%= @total %></td>
                </tr>
            </table>
            <h4>注文内容</h4>
            <table class="table table-hover table-bordered">
                <thead>
                    <th>商品</th>
                    <th>単価（税込）</th>
                    <th>個数</th>
                    <th>小計</th>
                </thead>
                <tbody>
                    <% @order.order_details.each do |order_detail| %>
                    <tr>
                        <td><%= order_detail.item.name %></td>
                        <td><%= order_detail.item.price %></td>
                        <td><%= order_detail.amount %></td>
                        <td><%= order_detail.subtotal%></td>
                    </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>