<div class="container">
     <div class="row no-gutters">
        <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
            <h3>注文情報確認</h3>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <% current_customer.cart_items.each do |cart_item| %>
                    <tr>
                        <td><%= cart_item.item.name %></td>
                        <td><%= cart_item.item.with_tax_price%></td>
                        <td><%= cart_item.amount %></td>
                        <td><%= cart_item.subtotal%></td>
                        <% @total += cart_item.subtotal %>
                    </tr>
                    <% end %>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>合計金額</td>
                    <td><%= @total %>円</td>
                </tbody>
            </table>
            <div>支払方法　<%= @order.payment_method %></div>
            <div>お届け先　〒<%= @order.postal_code %>　<%= @order.address %></div>
            <%= form_with model: @order, url: customers_complete_path do |f| %>
                <%= f.hidden_field :name %>
                <%= f.hidden_field :postal_code %>
                <%= f.hidden_field :address %>
                <%= hidden_field :total_price, value: @total %>
                <%= f.submit "注文を確定する", class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>