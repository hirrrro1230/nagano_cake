<div class="container">
     <div class="row no-gutters">
        <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
            <h3>注文情報確認</h3>
            <table class="table table-hover table-inverse">
                <thead>
                    <tr>
                        <th>商品名</th>
                        <th>単価(税込)</th>
                        <th>数量</th>
                        <th>小計</th>
                        <th colspan="3"></th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><%= order.current_customer.cart_item.item.name %></td>
                        <td><%= order.cart_item.item.with_tax_price%></td>
                        <td><%= order.cart_item.amount %>
                        </td>
                        <td><%= cart_item.subtotal%></td>
                        <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"  %></td>
                    </tr>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td>合計金額</td>
                    <td><%= @total %>円</td>
                </tbody>
            </table>
            <div>支払方法　<%#= @order.payment_method %></div>
            <div>お届け先<%= @order.postal_code %>　<%= @order.address %></div>
        </div>
    </div>
</div>