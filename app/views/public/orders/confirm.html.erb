<h3>注文情報確認</h3>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <% @orders.each do |order| %>
    <tbody>
        <tr>
            <td><%= order.cart_item.item.name %></td>
            <td><%= order.cart_item.item.with_tax_price%></td>
            <td>
                <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch do |f| %>
                    <%= f.select :amount, *[1..50] %><%= f.submit "変更", class:"btn btn-success" %>
                <% end %>
            </td>
            <td><%= cart_item.subtotal%></td>
            <td><%= link_to "削除する", cart_item_path(cart_item.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"  %></td>
        </tr>
        <td></td>
        <td></td>
        <td></td>
        <td>合計金額</td>
        <td><%= @total %>円</td>
    </tbody>
    <% end %>
</table>