<div class="container">
     <div class="row no-gutters">
        <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto px-0 my-5">
            <%= form_with model: @address, url: addresses_path do |f| %>
                <p><%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
                <%= f.text_field :postal_code %></p>
                <p><%= f.label :address, '住所' %>
                <%= f.text_field :address %></p>
                <p><%= f.label :name, '宛名' %>
                <%= f.text_field :name %></p>
                <%= f.submit '新規登録', class:"btn btn-success" %>
            <% end %>
            <table class="table table-hover table-bordered">
                <tr>
                    <th>郵便番号</th>
                    <th>住所</th>
                    <th>宛名</th>
                    <th></th>
                </tr>
                <% @addresses.each do |address| %>
                <tr>
                    <th><%= address.postal_code %></th>
                    <th><%= address.address %></th>
                    <th><%= address.name %></th>
                    <th><%= link_to '編集する', edit_address_path(address.id), class:"btn btn-success" %>
                    <%= link_to "削除する", address_path(address.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger"  %></th>
                </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>