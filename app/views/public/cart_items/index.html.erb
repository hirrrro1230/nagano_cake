<h3>ショッピングカート</h3>
<%= form_with model: @cart_item, url: new_order_path do |f| %>
<table class="table table-hover table-inverse">
    <thead>
        <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
            <th colspan="3"></th>
        </tr>
    </thead>
    <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
            <td><%= cart_item.item.name %></td>
            <td><%= cart_item.item.with_tax_price%> %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.subtotal%></td>
            <% @合計金額 +=  cart_item.subtotal %>
            <td>current_customer.cart_items.destroy_all</td>
        </tr>
        <% end %>
    </tbody>
</table>

    <%= link_to items_path, class:"btn btn-primary" do %>
        買い物を続ける
    <% end %>

<%= f.submit '情報入力に進む', class: "btn btn-success" %>
<% end %>