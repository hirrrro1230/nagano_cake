<h1>注文履歴一覧</h1>
<table class="table">
  <thead class="thead-light">
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
  </thead>
  <tbody>
      <% @orders.each do |order| %>
      <td><%= order.created_at %></td>
      <td><%= order.@customer.name %></td>
      <td><%= order.amount %></td>
      <% end %>
  </tbody>
</table>