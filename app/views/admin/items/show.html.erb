<div class="container">
    <h1>商品詳細</h1>
    <div class="row">
        <div class="col-md-4">
          <p>
              <% if @item.image.attached? %>
              <%= image_tag @item.image, size: "200x200" %>
              <% end %>
          </p>    
        </div>
        <div class="col-md-8">
            <p>商品名
            <%= @item.name %></p>
            <p>商品説明
            <%= @item.introduction %></p>
            <p>ジャンル
            <%= @item.genre_id %></p>
            <p>税込価格</br>
            (税抜価格)<%= @item.with_tax_price%>(<%= @item.price %>)円</p>
            <p>販売ステータス
            <%= @item.is_active %></p>
            <p>
            <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
            </p>
        </div>
    </div>
</div>