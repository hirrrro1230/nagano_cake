<div class="container">
     <div class="row">
        <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto rounded px-0 my-5">
          <h1>商品新規登録</h1>
            <%= form_with model: @item, url: admin_items_path do |f| %>
              <p>商品画像</p>
                <%= f.file_field :image, accept: "image/*" %>
              <p>商品名</p>
                <%= f.text_field :name %>
              <p>商品説明</p>
                <%= f.text_area :introduction %>
              <p>ジャンル</p>
                <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
              <p>税抜価格</p>
                <div class="field">
                  <%= f.text_field :price, data: { autonumeric: true } %>円
                </div>
              <p>販売ステータス</p>
                <%= f.label :is_active, '販売中', value: 1 %>
                <%= f.radio_button :is_active, '1' %>
                <%= f.label :is_active, '販売停止中', value: 0 %>
                <%= f.radio_button :is_active, '0' %>
              <%= f.submit '新規登録',  class: "btn btn-success" %>
            <% end %>
        </div>
    </div>
</div>
  